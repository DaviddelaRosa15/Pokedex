@using Application.ViewModels.Region
@model List<RegionViewModel>

@{
	ViewData["Title"] = "Regiones";
}

<div class="bg-primary p-2 rounded-2 mb-1">
	<h1>Mantenimiento de Regiones</h1>
</div>

<div class="row mb-3">
	<div class="col-3">
		<a asp-action="Create" class="btn btn-outline-danger">Crear Nueva Región</a>
	</div>
</div>

@if (Model == null || Model.Count == 0)
{
	<h3 class="text-lg-center mb-3">No hay Regiones</h3>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>
					Nombre
				</th>
				<th>
					Descripción
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@item.Name
					</td>
					<td>
						@item.Description
					</td>
					<td>
						<a asp-controller="Region" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Editar</a>
						<a asp-controller="Region" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

}
